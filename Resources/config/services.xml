<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="maxmode_generator.admin.class_generator.class">Maxmode\GeneratorBundle\Admin\ClassGenerator</parameter>
        <parameter key="maxmode_generator.admin.services_generator.class">Maxmode\GeneratorBundle\Admin\ServicesGenerator</parameter>
        <parameter key="maxmode_generator.entity.select.class">Maxmode\GeneratorBundle\Entity\Select</parameter>
    </parameters>

    <services>
        <service id="maxmode_generator.admin.class_generator" class="%maxmode_generator.admin.class_generator.class%" />
        <service id="maxmode_generator.admin.services_generator" class="%maxmode_generator.admin.services_generator.class%" />

        <service id="maxmode_generator.entity.select" class="%maxmode_generator.entity.select.class%" >
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager" />
            </call>
            <call method="setClassGenerator">
                <argument type="service" id="maxmode_generator.admin.class_generator" />
            </call>
        </service>
    </services>

</container>
